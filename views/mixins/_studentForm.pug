mixin studentForm(school)
  form(action=`/students/${school._id}` method="POST")
    //- pre= h.dump(form)
    label(for="name") Name
    input(type="text" name="name" placeholder="Full name, i.e. all three names")
    - const genders = ['M', 'F']
    - const gender = teacher.gender || []
    ul.tags
      each g in gender
        .tag.tag__choice
          input(type="radio" id=g value=choice name="genders" checked=(genders.includes(g)))
          label(for=chogice) #{g}
    - const choices = ['Maths', 'English', 'Somali', 'Social Studies','History', 'Science', 'Physics', 'Islamic Studies', 'Arabic']
    - const subjects = school.subjects || []
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type="checkbox" id=choice value=choice name="subjects" checked=(subjects.includes(choice)))
          label(for=choice) #{choice}
    input.button(type="submit" value="Save â†’" class="button")
