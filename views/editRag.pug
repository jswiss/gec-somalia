extends layout

block content
  h2= title
  
  form(action=`/school/add/${school._id || ''}` method="POST" class="card"
    enctype="multipart/form-data")
    - const rag = (school.rag && school.rag.rating) || []
    ul.tags
      //- each rating in ratings
      .tag.tag__choice
        input(type="radio" id=rating value="Red" name="rag[rating]" checked=(rag.includes(rating)))
        label(for=rating) Red
        input(type="radio" id=rating value="Orange" name="rag[rating]" checked=(rag.includes(rating)))
        label(for=rating) Amber
        input(type="radio" id=rating value="Green" name="rag[rating]" checked=(rag.includes(rating)))
        label(for=rating) Green

    input(type="submit" value="Save â†’" class="button")
